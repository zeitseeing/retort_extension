{
    "name": "Retort AI",
    "version": "0.1.0",
    "description": "Automatically generate retorts on Twitter",
    "permissions": ["storage"],
    "host_permissions": ["https://*.twitter.com/*", "https://*.retort.ai/*"],
    "background": {
      "service_worker": "background.js",
      "type": "module"
    },
    "content_scripts": [
      {
        "matches": ["https://*.twitter.com/*"],
        "js": ["contentScript.js"],
        "css": ["css/styles.css"]
      }
    ],
    "web_accessible_resources": [
      {
        "resources": [
          "assets/retort.png"
        ],
        "matches": ["https://*.twitter.com/*"]
      }
    ],
    "icons": {
      "16": "assets/icon16.png",
      "32": "assets/icon32.png",
      "48": "assets/icon48.png",
      "128": "assets/icon128.png"
    },
    "action": {
      "default_popup": "popup.html",
    "default_title": "Retort AI"
    },
    "externally_connectable": {
      "matches": ["https://*.retort.ai/*"]
    },
    "manifest_version": 3
}
